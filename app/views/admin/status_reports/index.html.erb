<div class="span12">
  <h1>Listing Status Reports (<%= @status_reports.size %>)</h1>

  <% if @status_reports.present? %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Team</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @status_reports.each do |status_report| %>
      <tr>
        <td><%= status_report.team.name %></td>
        <td><%= status_report.created_at %></td>
        <td><%= status_report.updated_at %></td>
        <td>
          <%= link_to 'View', admin_status_report_path(status_report) %> |
          <%= link_to 'Edit', edit_admin_status_report_path(status_report) %> |
          <%= link_to 'Delete', [:admin, status_report], data: { confirm: "Are you sure?" }, method: :delete %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <% else %>
  <br/>
  <p>No status reports have been created yet.</p>
  <br/>
  <% end %>

  <%= link_to new_admin_status_report_path, class: "btn btn-primary" do %>
  Create a New Status Report</a>
  <% end %>
</div>
