<div class="span12">
  <h1>Listing Status Reports (<%= @status_reports.size %>)</h1>

  <% if @status_reports.present? %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Team</th>
        <th>Created At</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @status_reports.each do |status_report| %>
      <tr>
        <td><%= status_report.team.name.titleize %></td>
        <td><%= status_report.created_at.in_time_zone(status_report.team.timezone).strftime("%m/%d/%Y at %l:%M%p") %></td>
        <td>
          <%= link_to 'View status updates', admin_status_report_path(status_report) %> |
          <%= link_to 'Delete', [:admin, status_report], data: { confirm: "Are you sure?" }, method: :delete %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <% else %>
  <br/>
  <p>No status reports have been created yet.</p>
  <br/>
  <% end %>
</div>
