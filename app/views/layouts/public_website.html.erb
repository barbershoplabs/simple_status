<!DOCTYPE html>
<html>
<head>
  <title>Simple Status</title>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
  <script type="text/javascript">Stripe.setPublishableKey('pk_sgMGdcpy0H8F1OqdH0J7esjxavF0O');</script>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target="#nav-collapse-01">
        </button>
        <%= link_to "Simple Status", master_root_url, class: "brand" %>
        <div class="nav-collapse collapse" id="nav-collapse-01">
          <ul class="nav">
            <li><%= link_to "Pricing", "/pricing" %></li>
            <li><%= link_to "Support", "/support" %></li>
            <li><%= link_to "Blog", "/blog" %></li>
          </ul> <!-- /nav -->
        </div>
      </div>
    </div>
  </div>

  <% flash.each do |name, msg| %>
  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
    <a class="close" data-dismiss="alert" href="#">Ã—</a>
    <%= msg %>
  </div>
  <% end %>

<div class="container">
  <div class="row">
    <%= yield %>
  </div>
</div>

</body>
</html>
